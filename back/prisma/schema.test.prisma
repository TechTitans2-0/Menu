// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource sqlite {
  provider = "sqlite"
  url      = env("DATABASE_URL_TEST")
}

model User {
  id         String   @id @default(uuid())
  name       String
  email      String   @unique
  password   String
  admin      Boolean  @default(false)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("users")
}

model Client {
  id        String    @id @default(uuid())
  name      String
  cpf       String    @unique
  email     String    @unique
  password  String
  birthday  DateTime
  phone     String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
  Order     Order[]

  @@map("clients")
}

model Order {
  id          String        @id @default(uuid())
  description String
  client      Client        @relation(fields: [clientId], references: [id])
  clientId    String
  status      Int           @default(0)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  finishedAt  DateTime?
  Order_Items Order_Items[]

  @@map("orders")
}

model Order_Items {
  id           String   @id @default(uuid())
  order        Order    @relation(fields: [orderId], references: [id])
  orderId      String
  product      Products @relation(fields: [productId], references: [id])
  productId    String
  quantity     Int
  pricePerUnit Float
  priceTotal   Float
  createdAt    DateTime @default(now())
  finishedAt   DateTime

  @@map("order_items")
}

model Products {
  id          String        @id @default(uuid())
  name        String        @unique
  price       Float
  description String
  rating      Float
  category    String
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  Order_Items Order_Items[]

  @@map("products")
}
